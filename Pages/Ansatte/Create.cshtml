@page
@model VismaE2interRPWDWEDN.Pages.Ansatte.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Ansatt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ansatt.Name" class="control-label"></label>
                <input asp-for="Ansatt.Name" class="form-control" />
                <span asp-validation-for="Ansatt.Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Ansatt.Stilling" class="control-label"></label>
                <select asp-for="Ansatt.Stilling" asp-items="Model.Stillinger">
                    <option value="">  </option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Legg til ansatt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Tilbake til ansattoversikten</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
